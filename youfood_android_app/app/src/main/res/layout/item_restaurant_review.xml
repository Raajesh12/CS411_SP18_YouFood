<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/text_restaurant_review_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="TextView"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/text_restaurant_review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_restaurant_review_username"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:text="TextView" />

    <RatingBar
        android:id="@+id/ratingbar_restaurant_review"
        style="@style/Widget.AppCompat.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_restaurant_review_username"
        android:layout_below="@+id/text_restaurant_review_username"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/text_restaurant_review_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ratingbar_restaurant_review"
        android:layout_below="@+id/ratingbar_restaurant_review"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/roboto"
        android:maxLines="3"
        android:ellipsize="end"
        android:textColor="@color/black" />
</RelativeLayout>